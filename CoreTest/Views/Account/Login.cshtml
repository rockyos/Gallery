@model CoreTest.ViewModels.LoginModel;

@{
    ViewData["Title"] = "Login";
}
<div class="d-flex justify-content-center">
    <h2>Enter to Gallery</h2>
</div>
    <div class="d-flex justify-content-center">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <input type="text" asp-for="Email" placeholder="Email" /><br />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Password" /><br />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Enter" class="btn-sm btn-outline-dark font-weight-bold" />
                    <a asp-action="Register" asp-controller="Account">Registration</a>
                </div>
            </div>
        </form>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
