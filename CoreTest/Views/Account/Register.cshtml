@model CoreTest.ViewModels.RegisterModel;

@{
    ViewData["Title"] = "Register";
}
<div class="d-flex justify-content-center">
    <h2>Registration</h2>
</div>
<div class="d-flex justify-content-center">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <input type="text" asp-for="Email" placeholder="Email" /><br />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password"/><br />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm password"/><br />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input type="submit" value="Registration" class="btn-sm btn-outline-dark font-weight-bold" />
            </div>
        </div>
    </form>
</div>
   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
